	${CXX} ${LDFLAGS} -o $@ $^

IntArraySolution.o: IntArraySolution.o 

StringSolution.out: StringSolution.o
	${CXX} ${LDFLAGS} -o $@ $^

StringSolution.o: StringSolution.cpp 

