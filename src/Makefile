CXX = g++
CXXFLAGS = -g3 -Wall -Wextra
LDFLAGS = -g3

BuildHalvesSolution.out: BuildHalvesSolution.o
	${CXX} ${LDFLAGS} -o $@ $^

BuildHalvesSolution.o: BuildHalvesSolution.cpp 

